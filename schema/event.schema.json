{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ydance.app/schema/event.schema.json",
  "title": "yDanceEvent",
  "description": "Canonical normalized event used by the UI and downstream systems.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_uid",
    "title",
    "start",
    "end",
    "timezone",
    "city",
    "venue",
    "styles"
  ],
  "properties": {
    "event_uid": {
      "type": "string",
      "minLength": 1,
      "description": "Stable identifier across versions (e.g., hash of dedupe key)."
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Monotonic version number for this event_uid."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "styles": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "vibe_tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "start": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 with timezone offset (RFC3339)."
    },
    "end": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 with timezone offset (RFC3339)."
    },
    "timezone": {
      "type": "string",
      "minLength": 1,
      "description": "IANA timezone, e.g., America/New_York"
    },
    "city": {
      "type": "string",
      "minLength": 1
    },
    "venue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "address": { "type": "string" },
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lon": { "type": "number", "minimum": -180, "maximum": 180 }
      }
    },
    "price": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "min": { "type": "number", "minimum": 0 },
        "max": { "type": "number", "minimum": 0 }
      }
    },
    "organizer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "pubkey": { "type": "string" },
        "contact": { "type": "string" }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url"],
        "properties": {
          "type": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string", "enum": ["nostr", "form", "import"] },
          "event_id": { "type": "string" },
          "relay": { "type": "string" },
          "received_at": { "type": "string", "format": "date-time" }
        }
      }
    },
    "last_update": {
      "type": "string",
      "format": "date-time"
    },
    "quality_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}









